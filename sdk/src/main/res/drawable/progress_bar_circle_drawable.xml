<?xml version="1.0" encoding="utf-8"?>

<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360" >

    <shape  android:shape="oval" android:useLevel="true" >
        <gradient
            android:centerY="50%"
            android:centerX="50%"
            android:startColor="@color/progress_bar_color_light"
            android:centerColor="@color/progress_bar_color"
            android:endColor="@color/progress_bar_color"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>