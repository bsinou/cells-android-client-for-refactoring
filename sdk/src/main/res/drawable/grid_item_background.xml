<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent1" />
        </shape>
    </item>

    <item android:state_enabled="true"  android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/selected_background"/>
        </shape>
    </item>


    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/black0"/>
                </shape>
            </item>

            <item android:right="0.35dp" android:bottom="0.35dp" android:left="0.35dp" android:top="0.35dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>